<?xml version="1.0" encoding="utf-8"?>

<ScrollView
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
>
	
	<TextView android:id="@+id/posicao"
		android:layout_height="35dip" android:layout_width="20sp" 
		android:layout_gravity="center_vertical"
	/>
 	<TextView android:id="@+id/descricao"
		android:layout_height="35dip" android:layout_width="255sp"
		android:layout_gravity="center_vertical"
	/>
	<ImageButton android:id="@+id/btExcluir" 
	  				 android:layout_width="20px"
	  				 android:layout_height="20px"
	  				 android:src="@drawable/excluir" 
	  				 android:layout_gravity="center_vertical"/>
</LinearLayout>

</ScrollView>