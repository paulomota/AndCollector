<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:background="#ffffff">
	
	<TableRow>
		<TextView android:id="@+id/text1" android:text="Nome:"
			android:textColor="#000000" />
		<EditText android:id="@+id/campoNome" android:width="240px" />
	</TableRow>
	<TableRow>
		<TextView android:id="@+id/text2" android:text="Descricao:"
			android:textColor="#000000" />
		<EditText android:id="@+id/campoDescricao"  android:layout_weight="2"/>
	</TableRow>
	<TableRow>
		<CheckBox android:id="@+id/checkAnonimo"
		 android:text="Anônimo?"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		/>
	</TableRow>
	
	<TableRow>
		<TextView android:id="@+id/text3" android:text="Questões:"
			android:textColor="#000000" />
		<EditText android:id="@+id/campoQtdQuestoes" android:enabled="false"/>
	</TableRow>

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="fill_parent">
		<Button android:id="@+id/btSalvar" android:text=" Salvar " 
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<Button android:id="@+id/btCancelar" android:text="Cancelar" 
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<Button android:id="@+id/btExcluir" android:text=" Excluir " 
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>
</TableLayout>